<view class="full-margin">
  <!-- Change the page depending on what want -->
  <view class="button-category-spacing">
    <view class = "button-category" bindtap=""><h2>Gigs</h2></view> <view class = "button-category" bindtap=""><h2>Talents</h2></view>
  </view>

  <!-- <view class="search-form-control form-group">
