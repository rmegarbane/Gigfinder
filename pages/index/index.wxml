  <view class="search-container">

    <form bindsubmit="formSubmit">
          <view class="search">
            <input class="h4" type="text" name="query" placeholder="Search" />
            <button form-type="submit"></button>
          </view>
    </form>
  </view>  

  <view class="title-container">
    <h2>Categories</h2>
  </view>
  <!--Catergory scroll through -->

  <scroll-view scroll-x="{{true}}">
      <view class="category-box">
        <view bindtap="navigateToItemShow" wx:for="{{items}}" mark:id="{{item.id}}" wx:key = "unique" class="category-card" >
          <image src="/pages/index/photos/handshake-icon.png" class="category-photo"></image>
          <view>{{item.name}}</view>
        </view>
      </view>
    </scroll-view>
  

</view>
