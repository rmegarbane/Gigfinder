/* I don't think this is the best way to add spacing to the various elements but it's effective -AM*/ 
.gig-card .name {
  font-weight: bold;
  margin: 15rpx auto 15rpx auto;
}
.gig-card .description {
  margin: 15rpx auto 15rpx auto;
}
.gig-card .rate {
  margin: 15rpx auto 15rpx auto;
}
.gig-card .date-posted {
  margin: 15rpx auto 15rpx auto;
}


.gig-cards-container {
  grid-template-columns: auto;
}

.gig-card {
  background-color: #F5F5F5;
  overflow: hidden;
  box-shadow: 0 3rpx 3rpx rgba(0,0,0,0.2);
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin: 24rpx;
  padding: 16rpx;
  border-radius: 16rpx;
}

.gig-card-info {
  padding: 12rpx;
  /* display: flex; */
  justify-content: space-between;
  align-items: flex-end;
}

.gig-card-info h2 {
  font-size: 32rpx;
  font-weight: bold;
}
.gig-card-info text {
  font-size: 32rpx;
  display: block;
}