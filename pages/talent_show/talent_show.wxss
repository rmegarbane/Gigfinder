.button-section {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
}

.connect-button {
  background-color: #97BFB4;
  width: 200rpx;
  height: 100rpx;
  box-shadow: 0 3px 3px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 16rpx;
  border-radius: 8rpx;
}

.connect-button h2 {
  color: rgba(0, 0, 0, 0.644);
}